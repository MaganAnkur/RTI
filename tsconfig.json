{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "api/*": ["src/api/*"],
      "components/*": ["src/components/*"],
      "lib/*": ["src/lib/*"],
      "navigation/*": ["src/navigation/*"],
      "screens/*": ["src/screens/*"],
      "utils/*": ["src/utils/*"],
      "hooks/*": ["src/hooks/*"],
      "assets": ["assets/*"]
    }
  }
}
